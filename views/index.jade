          img.col-md-3.camping-image-1(src='/images/2014_4.jpg', alt='...')
        div.col-md-12
          img.col-md-6.camping-image-1(src='/images/map1.jpg', alt='...')
          img.col-md-6.camping-image-1(src='/images/map3.jpg', alt='...')
      

  
